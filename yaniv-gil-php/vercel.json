{
  "version": 2,
  "rewrites": [
    { "source": "/", "destination": "/yaniv-gil-php/index.html" },
    { "source": "/about", "destination": "/yaniv-gil-php/about.html" },
    { "source": "/about.html", "destination": "/yaniv-gil-php/about.html" },
    { "source": "/(.*)\\.php", "destination": "/yaniv-gil-php/$1.html" },
    { "source": "/(.*)", "destination": "/yaniv-gil-php/$1" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        },
        {
          "key": "Expires",
          "value": "0"
        }
      ]
    }
  ]
}